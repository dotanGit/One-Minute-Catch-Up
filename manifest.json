{
  "manifest_version": 3,
  "name": "One Minute Catch-Up",
  "version": "1.0",
  "description": "Get a daily summary of your activities and upcoming events",
  "permissions": [
    "identity",
    "identity.email",
    "history",
    "storage",
    "downloads",
    "downloads.open",
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "extension/src/pages/index.html"
  },
  "oauth2": {
    "client_id": "1050975138446-29tihvpg99901h8a29k3oslj5jvai8mm.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  },
  "action": {
    "default_popup": "extension/popup/popup.html"
  },
  "background": {
    "service_worker": "extension/background/background.js",
    "type": "module"
  }
} 